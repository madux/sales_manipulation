<odoo>

       <data>

             <record model="ir.ui.view" id="view_sale_fake_form">
            <field name="name">sale.order.inherits</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
 
                <xpath expr="//field[@name='partner_id']" position="after">
                           <field name="fake_field" invisible="0" groups="sales_manipulation.sales_fake_officer,base.group_system"/>
                </xpath>
                <xpath expr="//notebook//page[1]//field[@name='order_line']" position="inside">
                            <field name="difference" invisible="0"/>
                         
                </xpath>
                <!-- <xpath expr="//button[@name='action_confirm']" position="attributes">
                           <attribute name="attrs">{'invisible':[('fake_field','=', True)]}</attribute>
                </xpath> -->

            </field>
        </record>

        <record model="ir.ui.view" id="fake_account_move_inherited_form" >
            <field name="name">Account Move Inherited</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                           <field name="fake_field" invisible="0"/>
                </xpath>
                
            </field>
        </record>

        <record model="ir.ui.view" id="account_sales_fake_view2" >
                <field name="name">account.payment</field>
                <field name="model">account.payment</field>
                <field name="inherit_id" ref="account.view_account_payment_form" />
                <field name="arch" type="xml">
                    <xpath expr="//field[@name='amount']" position="before">
                              <field name="fake_field" invisible="1" groups="sales_manipulation.sales_fake_officer,base.group_system"/>
                    </xpath>
                </field>
        </record>

        <record model="ir.ui.view" id="account_sales_invoice_fake" >
                <field name="name">account.payment.invoice</field>
                <field name="model">account.payment</field>
                <field name="inherit_id" ref="account.view_account_payment_invoice_form" />
                <field name="arch" type="xml">

                    <xpath expr="//field[@name='journal_id']" position="after">
                        <field name="fake_field" invisible="1" groups="sales_manipulation.sales_fake_officer,base.group_system"/>
                    </xpath>
                </field>
            </record>

        <record model="ir.ui.view" id="view_account_sale_fake_invoiceform">
            <field name="name">sales.field.fake.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="after">
                           <field name="fake_field" invisible="1" groups="sales_manipulation.sales_fake_officer,base.group_system"/>
                           
                </xpath>
            </field>
        </record>
        
    <record id="view_salefake_form_wizards" model="ir.ui.view">
        <field name="model">sale_fake.wizards</field>
        <field name ="name">Create Sales</field>
        <field name="arch" type="xml">
            <form string="Sales">
                <sheet>
                    <group colspan="20">
                        <group>
                            <field name="start"/>
                            <field name="end"/>
                            <field name="amount"/>                   
                        </group>
                        <group>                  
                            <field name="run_type" readonly="1"/>
                            <field name="value" string="Percentage value" placeholder="eg. 5%" required="1"/>
                            <field name="overall_operation"/>
                            <field name="sale_ordes" widget="many2many_tags"/>
                            <button name="trigger_preview_changes" string="Preview Changes" type="object" class="oe_highlight"/>
                            <button name="trigger_changes" string="Decrease` Sales Price" type="object" class="oe_highlight"/>                   
                        </group>
                     </group>
                     <notebook colspan="4"> 
                        <page name="original_orders" domain="[('active', '=', False)]" string="Original Sale Orders">
                            <field name="original_sales_order" readonly="0">
                              <tree string="Original Sales Order">
                                <field name="name" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                                <field name="date_order" readonly="1"/>
                                <field name="amount_total" readonly="1"/> 
                              </tree>
                            </field>
                            <separator string="Manipulate Sales Records" colspan="4"/>
                            <field name="sales_fake_line" readonly="0">
                              <tree string="Manipulated Sales Order" editable="bottom">
                                <field name="order_id" readonly="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="name" readonly="1"/>
                                 <field name="product_uom_qty" readonly="0"/>
                                 <field name="tax_id" readonly="0" widget="many2many_tags"/>
                                <field name="price_unit" readonly="0"/>
                                <field name="price_total" readonly="1"/> 
                              </tree>
                            </field>
                         </page>
                    </notebook>
                    <footer>
                        <button name="confirm_faker" string="Confirm" confirm="Are you sure you want to confirm?" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fake_sales_wizard" model="ir.actions.act_window">
        <field name="name">Create Sales</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale_fake.wizards</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field> 
        <field name="target">current</field>
        <field name="multi">True</field>
    </record>
    <menuitem id ="menu_sales_faker" name="Sales Faker" parent="sales_team.menu_sales" 
        action="action_fake_sales_wizard" sequence="10" groups="sales_manipulation.sales_fake_officer,base.group_system"/>
        

